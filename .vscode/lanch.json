{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "start:debug"
        ],
        "console": "integratedTerminal",
        "restart": true,
        "cwd": "${workspaceFolder}/backend",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }